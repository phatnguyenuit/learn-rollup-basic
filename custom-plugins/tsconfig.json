{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2015",
    "lib": ["DOM", "ES2020", "ES2020.String", "ESNext"],
    "downlevelIteration": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/"],
  "exclude": ["plugins/"]
}
